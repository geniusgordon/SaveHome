  <!--載入 API-->
  <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?key=AIzaSyDpkxtysHhnKngvwaIJLDQF1kKVHRs6nXs"></script>
  <!--
  <script type="text/javascript" src="http://google-maps-utility-library-v3.googlecode.com/svn/trunk/markerclusterer/src/markerclusterer.js"></script>
  -->
  <script type="text/javascript" src="http://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.1.2/src/markerclusterer.js"></script>
   
  <script type="text/javascript">

    if (!navigator.geolocation){
      console.log("Geolocation is not supported by your browser");
    }
    else {
      navigator.geolocation.getCurrentPosition(initialize, error);
    }

    function error() {
      console.log("Unable to retrieve your location");
    };

    var mc;
    var markers = [];
    var reportmarkers = [];
     var signClusterStyles = [ 
        {   
          textColor: 'white',
          url: 'images/sign_s.png',
          height: 22, 
          width: 22
        },  
        {   
          textColor: 'white',
          url: 'images/sign_m.png',
          height: 37, 
          width: 37
        },  
        {   
          textColor: 'white',
          url: 'images/sign_l.png',
          height: 57, 
          width: 57
        }   
      ];  

     var drunkClusterStyles = [ 
        {   
          textColor: 'white',
          url: 'images/drunk_s.png',
          height: 22, 
          width: 22
        },  
        {   
          textColor: 'white',
          url: 'images/drunk_m.png',
          height: 37, 
          width: 37
        },  
        {   
          textColor: 'white',
          url: 'images/drunk_l.png',
          height: 57, 
          width: 57
        }   
      ];  

     var wetClusterStyles = [ 
        {   
          textColor: 'white',
          url: 'images/wet_s.png',
          height: 22, 
          width: 22
        },  
        {   
          textColor: 'white',
          url: 'images/wet_m.png',
          height: 37, 
          width: 37
        },  
        {   
          textColor: 'white',
          url: 'images/wet_l.png',
          height: 57, 
          width: 57
        }   
      ];  

     var blindClusterStyles = [ 
        {   
          textColor: 'white',
          url: 'images/blind_s.png',
          height: 22, 
          width: 22
        },  
        {   
          textColor: 'white',
          url: 'images/blind_m.png',
          height: 37, 
          width: 37
        },  
        {   
          textColor: 'white',
          url: 'images/blind_l.png',
          height: 57, 
          width: 57
        }   
      ];  

    var map;

    function initialize(position) {

      var latlng = new google.maps.LatLng(position.coords.latitude, position.coords.longitude);
      var mapOptions = {
        center: latlng,
        zoom: 18,
        mapTypeId: google.maps.MapTypeId.ROADMAP
      };

      map = new google.maps.Map(document.getElementById("map_canvas"), mapOptions);

      var currentMark = new google.maps.Marker({
        position: latlng,
        map: map,
        draggable: false,
      });

      currentMark.addListener('mouseover', function() {
        clicklatLng = new google.maps.LatLng(position.coords.latitude, position.coords.longitude);
        infowindow.open(map, this);
      });

      var preMark;
      google.maps.event.addListener(
        map,
        'click',
        function(e) {
          clicklatLng = e.latLng

          if(preMark)
            preMark.setMap(null);

          var marker = new google.maps.Marker({
            position: e.latLng,
            map: map,
            draggable: false,
            animation: google.maps.Animation.BOUNCE,
            icon: "https://maps.gstatic.com/mapfiles/ms2/micons/caution.png",
          });

          markers.push(marker);
          infowindow.open(map, marker);
          $('.tooltipped').tooltip({delay: 50});
          preMark = marker;
        }
      );


      var contentString = '<div class="img-wrapper"><img class="report tooltipped" data-position="bottom" data-delay="50" data-tooltip="酒駕" data-type="Drunk" src="images/drunk.png"><img class="report tooltipped" data-position="bottom" data-delay="50" data-tooltip="道路標示不清"  data-type="Sign" src="images/sign.png"><img class="report tooltipped" data-position="bottom" data-delay="50" data-tooltip="路面不平" data-type="Wet" src="images/wet.png"><img class="report tooltipped" data-position="bottom" data-delay="50" data-tooltip="視線死角" data-type="Blind" src="images/blind.png"></div>';
      var clicklatLng;
      $('body').on('click', '.report', function() {
        $('.tooltipped').tooltip('remove');
        infowindow.close();
        preMark.setMap(null);
        var that = this;
        navigator.geolocation.getCurrentPosition(report);
          function report(position) {
            $.ajax({
              url: "http://172.17.183.92:9999/api/report",
              method: "POST",
              data: {
                status: that.getAttribute('data-type'),
              /*
                lat: position.coords.latitude,
                lng: position.coords.longitude,
              */
                lat: clicklatLng.lat(),
                lng: clicklatLng.lng(),
              },
              success: function(data) {
                swal({
                  title: "成功回報!",
                  text: "感謝您成功回報道路交通不良資訊",
                  type: "success",
                }, function() {
                });
                reloadBadge();
              },
              error: function(data) {
              }
            });
            
        };
      });

      var infowindow = new google.maps.InfoWindow({
        content: contentString
      });

      google.maps.event.addListener(infowindow, 'closeclick', function() {
        preMark.setMap(null);
      });

      function close() {
        preMark.setMap(null);
        infowindow.close();
      }

      $.ajax({
        url: "http://172.17.183.92:9999/api/report",
        dataType: "JSON",
        method: "GET",
        success: function(data) {
          var x;
          for(x in data.reports) {
            var reportlatlng = new google.maps.LatLng(data.reports[x].lat, data.reports[x].lng); 
            
            reportmarkers.push(
              new google.maps.Marker({
                position: reportlatlng,
                map: map,
                draggable: false,
              })
            );
          }
          cluster(map);
        },
      });

    }
      
    function cluster(map) {
      mc = new MarkerClusterer (map, reportmarkers, {gridSize: 50, maxZoom: 20, styles: blindClusterStyles});
    }

    function getRank() {
      return mc.getClusters().map((c) => {
        return {
          count: c.getMarkers().length,
          center: c.center_,
        }
      }).sort((a, b) => {
          return b.count - a.count;
      });
    }

  </script>
</head>
<body>  

  <style>
    span.badge.new {
      line-height: 20px;
      margin-top: 22px;
    }
  </style>
  <header>
    <ul id="slide-out" class="side-nav fixed">
      <div class="section"></div>
      <div class="center-align"><img src="images/logo.png"></div>
      <div class="section"></div>
      <div class="divider green"></div>
      <div class="divider green"></div>
      <div class="section"></div>
      <li><a href="report"><i class="material-icons teal-text" style="vertical-align: middle">surround_sound</i><b>&nbsp&nbsp&nbsp回&nbsp報&nbsp與&nbsp即&nbsp時&nbsp狀&nbsp況</b></a></li>
      <li><a href="percent"><i class="material-icons teal-text" style="vertical-align: middle">insert_chart</i><b>&nbsp&nbsp&nbsp昨&nbsp日&nbsp統&nbsp計</b><span class="new badge"></span></a></li>
      <li><a href="warning"><i class="material-icons teal-text" style="vertical-align: middle">folder</i><b>&nbsp&nbsp&nbsp累&nbsp積&nbsp數&nbsp據</b></a></li>
      <li class="active"><a href="rank"><i class="material-icons teal-text" style="vertical-align: middle">stars</i><b>&nbsp&nbsp&nbsp全&nbsp台&nbsp爛&nbsp路&nbsp排&nbsp名</b></a></li>
    </ul>
  </header>

  <div id="map_canvas" style="height:100%"></div>

  <!-- Modal Trigger -->
  <div class="fixed-action-btn" style="bottom: 45px; right: 60px;">
    <a href="#rankModal" class="modal-trigger btn-floating btn-large red ranking">
      <i class="large material-icons">stars</i>
    </a>
  </div>

  <!-- Modal Structure -->
  <div id="rankModal" class="modal modal-fixed-footer">
    <div class="modal-content">
      <h4>北市投訴爛路排名</h4>
      <div class="rank"></div>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">關閉</a>
    </div>
  </div>

</body>
<script>

  function reloadBadge(){
    $.ajax({
    url: "http://172.17.183.92:9999/api/report/percent",
    dataType: "JSON",
    method: "GET",
    success: function(data) {
      $('span.badge.new').html(data.total+"&nbsp&nbsp");
    }

    });
  }
  reloadBadge();

  $(document).ready(function() {
    $('.modal-trigger').leanModal();

    var hasRank = false;
    $('.ranking').click(function() {
      if (map.getZoom() !== 17) {
        map.setZoom(17);
      }
      var rank = getRank();
      setTimeout(function() {
        var collection = $('<div class="collection"></div>');
        rank.forEach((r, i) => {
          var a = $(`<a href="#" class="collection-item">第${i+1}名: ${r.count}筆投訴</a>`);
          a.click(function() {
            var infowindow = new google.maps.InfoWindow({
              content: `<p>第${i+1}名: ${r.count}筆投訴</p>`,
            });
            var m = new google.maps.Marker({
              position: r.center,
              map: map,
              draggable: false,
              icon: null,
            });
            $('#rankModal').closeModal();
            infowindow.open(map, m);
          });
          collection.append(a);
        });
        $('.rank').append(collection);
      }, 1000);
    });

  });

</script>
